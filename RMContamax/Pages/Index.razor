@page "/"

@inject IJSRuntime js

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>¡Bienvenido, @context.User.Identity.Name!.</h1>
    </Authorized>

    <NotAuthorized>
        <h1>¡Sesión no iniciada!.</h1>
    </NotAuthorized>
</AuthorizeView>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        <br /><br />
        <button @onclick="DisplayAlert" class="btn btn-outline-primary"> Mensaje de bienvenida. </button>
    </Authorized>
</AuthorizeView>

@code{
    [CascadingParameter]
    private Task<AuthenticationState> authenticationState { get; set; }

    public async Task DisplayAlert()
    {
        var authState = await authenticationState;
        var message = $"Hola, {authState.User.Identity.Name}";
        await js.InvokeVoidAsync("alert", message);
    }
}